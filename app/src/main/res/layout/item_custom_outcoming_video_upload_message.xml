<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="16dp"
    android:layout_gravity="end">

    <!-- Video Thumbnail with Progress Overlay -->
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_outcoming_message"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/videoThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mimetype_video" />

        <!-- Progress Overlay with ConstraintLayout for perfect centering -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progressOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:visibility="visible">

            <!-- ProgressBar perfekt vertikal + horizontal zentriert -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/colorPrimary"
                android:progressBackgroundTint="@color/bg_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.85"
                app:layout_constraintVertical_bias="0.5" />

            <!-- StatusText direkt unter ProgressBar, stabil zentriert -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komprimierung... 0%"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:minWidth="140dp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Cancel Button -->
        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@drawable/accent_circle"
            android:src="@drawable/ic_baseline_close_24"
            android:contentDescription="Upload abbrechen"
            android:visibility="visible" />

    </FrameLayout>

    <!-- Message Text -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="ðŸ“¹ Video wird komprimiert..." />

    <!-- Video Details (LÃ¤nge / KompressionsstÃ¤rke / GrÃ¶ÃŸe) -->
    <TextView
        android:id="@+id/videoDetailsText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/medium_emphasis_text"
        android:textSize="11sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone"
        tools:text="LÃ¤nge: 00:12 â€¢ Kompr.: Mittel â€¢ 8.5 MB" />

    <!-- Author and Time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messageAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/medium_emphasis_text"
            android:textSize="10sp"
            tools:text="Du" />

        <TextView
            android:id="@+id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/medium_emphasis_text"
            android:textSize="10sp"
            tools:text="12:34" />

    </LinearLayout>

</LinearLayout>